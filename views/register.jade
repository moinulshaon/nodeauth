extends layout

block content
  .content
    .jumbotron
        h1 Register
        .container
            Please register using the form below
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    form(method='post', action='/users/register',enctype='multipart/form-data')
        .form-group
            label Name
            input.form-control(name='name', type='text' , placecholder='Enter Name' )
        .form-group
            label Email
            input.form-control(name='email', type='email' , placecholder='Enter email' )
        .form-group
            label Username
            input.form-control(name='username', type='text' , placecholder='Enter username' )
        .form-group
            label Password
            input.form-control(name='password', type='password' , placecholder='Enter password' )
        .form-group
            label Confirm Password
            input.form-control(name='password2', type='password' , placecholder='Confirm password' )
        .form-group
            label Profile Picture
            input.form-control(name='profileimage', type='file' )
        input.btn.btn-default( name='submit' , type = 'submit' , value =  'Register' )
