extends layout

block content
  .content
    .jumbotron
        h1 Register
        .container
            Please register using the form below
    form(method='post', action='/users/register',enttype='multipart/form-data')
        .form-group
            label Username
            input.form-control(name='username', type='text' , placecholder='Enter Username' )
        .form-group
            label Password
            input.form-control(name='password', type='password' , placecholder='Enter password' )
        input.btn.btn-default( name='submit' , type = 'submit' , value =  'Login' )
